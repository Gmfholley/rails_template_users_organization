<div class="row">
  <h2 class="accent-font text-center">Hi, <%= @user.first_name %></h2>
  <h4 class="text-center">Member of <%= link_to @user.organization.name, organization_path(@user.organization.token) %></h4>
  <div class="row">
    <div class="col col-xs-12 col-md-6 text-center">
      <%= link_to 'Edit Profile', edit_profile_path, class: 'btn accent-background' %>    
    </div>
    <div class="col col-xs-12 col-md-6 text-center">
      <%= link_to 'Delete Account', delete_profile_path, method: 'delete', class: 'btn accent-background' %>
    </div>
  </div>  
</div>